<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.inventory.ProductManagementController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Product Management System" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>
        
        <Label text="Product Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Quantity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="quantityField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
    
    </GridPane>
    
    <HBox spacing="10">
        <Button text="Add Product" onAction="#handleAddProduct" style="-fx-base: #4CAF50;"/>
        <Button text="Update Product" onAction="#handleUpdateProduct" style="-fx-base: #2196F3;"/>
        <Button text="Delete Product" onAction="#handleDeleteProduct" style="-fx-base: #F44336;"/>
        <Button text="Export CSV" onAction="#handleExport"/>
    </HBox>
    
    <TableView fx:id="productTableView" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"/>
        </columns>
    </TableView>
</VBox>